@model Dental_Clinic_System.Models.Data.Dentist

@{
	ViewData["Title"] = "Details";
	Layout = "_LayoutManager";
}
@section Styles {
	<style>

		.sidebar .nav-item a.Quan_ly_nha_si {
			color: #fff;
			background: #4880ff;
		}

		.chinhle {
			width: 1000px;
		}

		.button {
			padding: 6px 20px;
		}

		.manager__management__header .action-btn .add__new1 {
			background: #dc3545;
			border: none;
			outline: none;
			color: white;
			font-weight: 600;
			padding: 6px 20px;
			border-radius: 6px;
			cursor: pointer;
		}

			.manager__management__header .action-btn .add__new1:hover {
				background: #bb2d3b;
			}

		.modal-content {
			--mdb-modal-box-shadow: 0 6px 45px -9px rgba(var(--mdb-box-shadow-color-rgb), 0.21), 0 30px 60px -6px rgba(var(--mdb-box-shadow-color-rgb), 0.12);
			border: 0;
			box-shadow: var(--mdb-modal-box-shadow);
			padding: 24px 48px !important; /* Reduced padding for top/bottom and left/right */
			border-radius: 10px; /* Adjust this value to change the roundness of the corners */
		}
	</style>
}

<div class="modal-content">
	<!--header -->
	<div class="manager__management__header">
		<div class="title">Chi tiết nha sĩ</div>
	</div>
	<!--body -->
	<hr /> @* Đường phân cách *@
	<div style="min-height: 420px;">
		<dl class="row" style="padding-left: 100px; padding-right: 100px;font-size: 2rem">
			<dt class="col-sm-2">Họ tên</dt>
			<dd class="col-sm-10">@Model.Account.LastName @Model.Account.FirstName</dd>

			<dt class="col-sm-2">Giới tính</dt>
			<dd class="col-sm-10">@Model.Account.Gender</dd>

			<dt class="col-sm-2">Ngày sinh</dt>
			<dd class="col-sm-10">@Model.Account.DateOfBirth?.ToString("dd/MM/yyyy")</dd>

			<dt class="col-sm-2">Địa chỉ</dt>
			<dd class="col-sm-10">@ViewBag.Address @ViewBag.Ward  @ViewBag.District @ViewBag.Province </dd>

			<dt class="col-sm-2">Email</dt>
			<dd class="col-sm-10">@Model.Account.Email</dd>

			<dt class="col-sm-2">Số điện thoại</dt>
			<dd class="col-sm-10">@Model.Account.PhoneNumber</dd>

			<dt class="col-sm-2">Bằng cấp</dt>
			<dd class="col-sm-10">@Model.Degree.Name</dd>

			<dt class="col-sm-2">Chuyên khoa</dt>
			<dd class="col-sm-10">
				@{
					var specialtyNames = ViewBag.SpecialtyNames as List<string>; // Retrieve the list of specialty names
				}
				@if (specialtyNames != null)
				{
						@foreach (var name in specialtyNames)
						{
							@name<br/>
						}
				}
			</dd>

			<dt class="col-sm-2">Mô tả</dt>
			<dd class="col-sm-12" style="border: 1px solid #af6d233b; border-radius: 5px; padding: 15px 20px;">@Html.Raw(@Model.Description)</dd>
		</dl>
	</div>
	<hr />
	<div class="manager__management__header">
		<h1></h1>
		<div class="action-btn">

			<a asp-action="Index">Back to List</a>
			|
			<a asp-action="Edit" asp-route-id="@Model.ID">
				<button class="add__new">
					Chỉnh sửa
				</button>
			</a>
			<a asp-action="Delete" asp-route-id="@Model.ID">
				<button class="add__new1">
					Xóa
				</button>
			</a>
		</div>
	</div>
</div>
<br />

